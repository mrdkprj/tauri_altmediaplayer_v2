{
  "app": {
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost; media-src 'self' asset: http://asset.localhost; connect-src ipc: http://ipc.localhost"
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico"
    },
    "windows": [
      {
        "title":"",
        "label":"Player",
        "minHeight":400,
        "minWidth":400,
        "fullscreen": false,
        "resizable": true,
        "maximizable":true,
        "minimizable":true,
        "closable":true,
        "focus":true,
        "visible":false,
        "decorations":false,
        "skipTaskbar":false,
        "transparent":false,
        "theme": "Dark",
        "dragDropEnabled":true,
        "shadow":true,
        "url":"src/player/index.html",
        "additionalBrowserArgs":"--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --enable-features=msWebView2BrowserHitTransparent"
      },
      {
        "title":"",
        "label":"Playlist",
        "fullscreen": false,
        "resizable": true,
        "maximizable":false,
        "minimizable":false,
        "closable":true,
        "focus":false,
        "visible":false,
        "decorations":false,
        "skipTaskbar":true,
        "parent":"Player",
        "transparent":false,
        "dragDropEnabled":false,
        "theme": "Dark",
        "shadow":false,
        "url":"src/playlist/index.html",
        "additionalBrowserArgs":"--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --enable-features=msWebView2BrowserHitTransparent"
      },
      {
        "title":"",
        "label":"Convert",
        "width": 640,
        "height": 700,
        "fullscreen": false,
        "resizable": true,
        "maximizable":false,
        "minimizable":false,
        "closable":true,
        "focus":false,
        "visible":false,
        "decorations":false,
        "skipTaskbar":true,
        "parent":"Player",
        "transparent":false,
        "theme": "Dark",
        "shadow":false,
        "url":"src/convert/index.html",
        "additionalBrowserArgs":"--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --enable-features=msWebView2BrowserHitTransparent"
      },
      {
        "title":"",
        "label":"Tag",
        "width": 400,
        "height": 600,
        "minHeight": 250,
        "fullscreen": false,
        "resizable": true,
        "maximizable":false,
        "minimizable":false,
        "closable":true,
        "focus":false,
        "visible":false,
        "decorations":false,
        "skipTaskbar":true,
        "parent":"Playlist",
        "transparent":false,
        "theme": "Dark",
        "shadow":false,
        "url":"src/tag/index.html",
        "additionalBrowserArgs":"--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --enable-features=msWebView2BrowserHitTransparent"
      }
  ],
  "withGlobalTauri": true
  },
  "build": {
    "beforeBuildCommand": "yarn buildts",
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "Video",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "nsis",
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "installerIcon": "icons/icon.ico"
      }
    },
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ]
  },
  "identifier": "com.taltmediaplayer.dev",
  "productName": "taltmediaplayer",
  "version": "0.0.1"
}